{
    "tags": [
      {
        "name": "Payment",
        "description": "API for payment CRUD operations."
      }
    ],
    "components": {
      "schemas": {
        "PaymentResponseSchema": {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string",
              "example": "666968c3bb67a71a9b27fe57"
            },
            "card": {
              "type": "string",
              "example": ""
            },
            "serviceUsed": {
              "type": "string",
              "enum": ["paypal"]
            },
            "servicePaymentStatus": {
              "type": "string",
              "example": ""
            },
            "servicePaymentId": {
                "type": "string",
                "example": ""
            },
            "description": {
              "type": "string",
              "example": ""
            },
            "type": {
                "type": "string",
                "enum": ["ADD"]
            },
            "amount": {
                "type": "number",
                "example": 10
            },
            "status": {
              "type": "string",
              "enum": ["SUCCESS", "FAILED"]
            },
            "currency": {
                "type": "string",
                "enum": ["USD", "INR"]
            },
            "isDeleted": {
              "type": "boolean",
              "example": false
            },
            "createdAt": {
              "type": "string",
              "format": "date-time",
              "example": "2024-06-18T09:22:11.200Z"
            },
            "updatedAt": {
              "type": "string",
              "format": "date-time",
              "example": "2024-06-18T12:23:40.803Z"
            },
            "__v": {
              "type": "number",
              "example": 0
            },
            "userId": {
                "type": "string",
                "example": "666968c3bb67a71a9b27fe56"
            },
            "createdBy": {
              "type": "string",
              "example": "666968c3bb67a71a9b27fe56"
            },
            "updatedBy": {
              "type": "string",
              "example": "666968c3bb67a71a9b27fe58"
            }
          }
        }
      }
    },
    "paths": {
      "/payments": {
        "post": {
          "summary": "Add payment",
          "description": "Endpoint to make payment for credit",
          "tags": ["Payment"],
          "security": [{ "bearerAuth": [] }],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "amount": { "type": "number" },
                    "servicePaymentId": { "type": "string" },
                    "servicePaymentStatus": { "type": "string" },
                    "currency": { "type": "string" }
                  },
                  "required": ["amount", "servicePaymentId", "servicePaymentStatus"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": {
                        "type": "boolean",
                        "example": true
                      },
                      "message": {
                        "type": "string",
                        "example": "Payment made succesfully"
                      },
                      "data": {
                        "type": "object",
                        "properties": {
                            "payment": { "$ref": "#/components/schemas/PaymentResponseSchema" }
                        }
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "",
              "content": {
                "application/json": {
                  "schema": {
                    "description": "",
                    "$ref": "#/components/schemas/BadRequestSchema"
                  }
                }
              }
            },
            "401": {
                "description": "",
                "content": {
                  "application/json": {
                    "schema": {
                      "description": "",
                      "$ref": "#/components/schemas/AuthenticationErrorResponseSchema"
                    }
                  }
                }
            },
            "403":  {
              "description": "",
              "content": {
                "application/json": {
                  "schema": {
                    "description": "",
                    "$ref": "#/components/schemas/AuthorizationErrorResponseSchema"
                  }
                }
              }
            },
            "404":  {
              "description": "",
              "content": {
                "application/json": {
                  "schema": {
                    "description": "",
                    "$ref": "#/components/schemas/RouteNotFoundResponseSchema"
                  }
                }
              }
            },
            "500": {
              "description": "",
              "content": {
                "application/json": {
                    "schema": {
                      "description": "",
                      "$ref": "#/components/schemas/ErrorResponseSchema"
                    }
                }
              }
            }
          }
        },
        "get": {
            "summary": "Get payment history",
            "description": "Endpoint to get payment history",
            "tags": ["Payment"],
            "security": [{ "bearerAuth": [] }],
            "parameters": [
                  {
                    "name": "pageIndex",
                    "in": "query",
                    "description": "Index of page to search",
                    "schema": {
                      "type": "any",
                      "example": "1"
                    }
                  },
                  {
                        "name": "pageSize",
                        "in": "query",
                        "description": "Number of entries to return in one page",
                        "schema": {
                        "type": "any",
                        "example": "1"
                        }
                  },
                  {
                    "name": "from",
                    "in": "query",
                    "description": "Start date of date range to search in yyyy-mm-dd format",
                    "schema": {
                      "type": "string",
                      "example": "2024-10-01"
                    }
                },
                {
                  "name": "to",
                  "in": "query",
                  "description": "Last date of date range to search in yyyy-mm-dd",
                  "schema": {
                    "type": "string",
                    "example": "2024-10-01"
                  }
                },
                  {
                    "name": "userId",
                    "in": "query",
                    "description": "Id of customer to search",
                    "schema": {
                      "type": "string",
                      "example": "66ffe4c6b75cc7b64f141e7f"
                    }
                  }
            ],
            "responses": {
              "200": {
                "description": "",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "success": {
                          "type": "boolean",
                          "example": true
                        },
                        "message": {
                          "type": "string",
                          "example": "Payment history fetched succesfully"
                        },
                        "data": {
                          "type": "object",
                          "properties": {
                              "payments": { 
                                "type": "array",
                                "items": {
                                  "$ref": "#/components/schemas/PaymentResponseSchema" } 
                                },
                                "totalCount": { "type": "number", "example": 1 },
                                "pageCount": { "type": "number", "example": 1 },
                                "pageIndex": { "type": "number", "example": 1 },
                                "pageSize": { "type": "number", "example": 10 },
                                "count": { "type": "number", "example": 1 }
                                
                          }
                        }
                      }
                    }
                  }
                }
              },
              "400": {
                "description": "",
                "content": {
                  "application/json": {
                    "schema": {
                      "description": "",
                      "$ref": "#/components/schemas/BadRequestSchema"
                    }
