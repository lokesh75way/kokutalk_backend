                "type": "string",
                "format": "date-time",
                "example": "2024-06-18T09:22:11.200Z"
            },
            "status": {
              "type": "string",
              "example": ""
            },
            "userId": {
                "type": "string",
                "example": "666968c3bb67a71a9b27fe56"
            },
            "message": {
                "type": "string",
                "example": "New notification"
            },
            "title": {
                "type": "string",
                "example": "New notification"
            },
            "isDeleted": {
              "type": "boolean",
              "example": false
            },
            "createdAt": {
              "type": "string",
              "format": "date-time",
              "example": "2024-06-18T09:22:11.200Z"
            },
            "updatedAt": {
              "type": "string",
              "format": "date-time",
              "example": "2024-06-18T12:23:40.803Z"
            },
            "__v": {
              "type": "number",
              "example": 0
            }
          }
        }
      }
    },
    "paths": {
      "/notifications": {
        "get": {
            "summary": "Get notification list of user",
            "description": "Endpoint to get notification list of user",
            "tags": ["Notification"],
            "security": [{ "bearerAuth": [] }],
            "parameters": [
                {
                  "name": "entityType",
                  "in": "query",
                  "description": "Entity type of the notification to search",
                  "schema": {
                    "type": "string",
                    "example": "credit"
                  }
                },
                {
                    "name": "entityTypeId",
                    "in": "query",
                    "description": "Id of entity type of the notification to search",
                    "schema": {
                      "type": "string",
                      "example": "666968c3bb67a71a9b27fe56"
                    }
                },
                {
                    "name": "message",
                    "in": "query",
                    "description": "Message of the notification to search",
                    "schema": {
                      "type": "string",
                      "example": "new notification"
                    }
                },
                {
                  "name": "title",
                  "in": "query",
                  "description": "Title of the notification to search",
                  "schema": {
                    "type": "string",
                    "example": "new notification"
                  }
                },
                {
                    "name": "isSeen",
                    "in": "query",
                    "description": "View status of the notification to search",
                    "schema": {
                      "type": "boolean",
                      "example": false
                    }
                },
                {
                  "name": "from",
                  "in": "query",
                  "description": "Start date of date range to search in yyyy-mm-dd format",
                  "schema": {
                    "type": "string",
                    "example": "2024-10-01"
                  }
              },
              {
                "name": "to",
                "in": "query",
                "description": "Last date of date range to search in yyyy-mm-dd",
                "schema": {
                  "type": "string",
                  "example": "2024-10-01"
                }
              },
                {
                  "name": "userId",
                  "in": "query",
                  "description": "Id of customer to search",
                  "schema": {
                    "type": "string",
                    "example": "66ffe4c6b75cc7b64f141e7f"
                  }
                },
                {
                    "name": "pageIndex",
                    "in": "query",
                    "description": "Index of page to search",
                    "schema": {
                      "type": "any",
                      "example": "1"
                    }
                },
                {
                    "name": "pageSize",
                    "in": "query",
                    "description": "Number of entries to return in one page",
                    "schema": {
                      "type": "any",
                      "example": "1"
                    }
                }
            ],
            "responses": {
              "200": {
                "description": "",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "success": {
                          "type": "boolean",
                          "example": true
                        },
                        "message": {
                          "type": "string",
                          "example": "Notification list fetched succesfully"
                        },
                        "data": {
                          "type": "object",
                          "properties": {
                              "notifications": { 
                                "type": "array",
                                "items": {
                                  "$ref": "#/components/schemas/NotificationResponseSchema" } 
                                },
                                "totalCount": { "type": "number", "example": 1 },
                                "pageCount": { "type": "number", "example": 1 },
                                "pageIndex": { "type": "number", "example": 1 },
                                "pageSize": { "type": "number", "example": 10 },
                                "count": { "type": "number", "example": 1 }
                                
                          }
                        }
                      }
                    }
                  }
                }
              },
              "400": {
                "description": "",
                "content": {
                  "application/json": {
                    "schema": {
                      "description": "",
                      "$ref": "#/components/schemas/BadRequestSchema"
                    }
                  }
                }
              },
              "401": {
                  "description": "",
                  "content": {
                    "application/json": {
                      "schema": {
                        "description": "",
                        "$ref": "#/components/schemas/AuthenticationErrorResponseSchema"
                      }
                    }
                  }
              },
              "404":  {
                "description": "",
