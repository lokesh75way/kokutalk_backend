{
  "tags": [
    {
      "name": "User",
      "description": "API for user CRUD operations."
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "UserResponseSchema": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "666968c3bb67a71a9b27fe57"
          },
          "name": {
            "type": "string",
            "example": "user name"
          },
          "phoneNumber": {
            "type": "string",
            "example": "3409129812"
          },
          "countryCode": {
            "type": "string",
            "example": "+91"
          },
          "status": {
            "type": "string",
            "example": ""
          },
          "isDeleted": {
            "type": "boolean",
            "example": false
          },
          "termsAgreed": {
            "type": "boolean",
            "example": true
          },
          "allowSmsNotification": {
            "type": "boolean",
            "example": true
          },
          "allowEmailNotification": {
            "type": "boolean",
            "example": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2024-06-18T09:22:11.200Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2024-06-18T12:23:40.803Z"
          },
          "__v": {
            "type": "number",
            "example": 0
          },
          "contact": {
            "type": "string",
            "example": "666968c3bb67a71a9b27fe56"
          },
          "credit": {
            "type": "string",
            "example": "666968c3bb67a71a9b27fe58"
          }
        }
      },
      "ErrorResponseSchema": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string",
            "example": "Something went wrong"
          }
        }
      },
      "RouteNotFoundResponseSchema": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Not found"
          },
          "success": {
            "type": "boolean",
            "example": false
          }
        }
      },
      "AuthenticationErrorResponseSchema": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Unauthorized"
          },
          "success": {
            "type": "boolean",
            "example": false
          }
        }
      },
      "BadRequestSchema": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": ""
          },
          "success": {
            "type": "boolean",
            "example": false
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/users/send-otp": {
      "post": {
        "summary": "Send otp to user",
        "description": "Endpoint to send the OTP to user phone",
        "tags": ["User"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phoneNumber": { "type": "string" },
                  "countryCode": { "type": "string" }
                },
                "required": ["phoneNumber", "countryCode"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Otp sent to verify phone number"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "description": "",
                  "$ref": "#/components/schemas/BadRequestSchema"
                }
              }
            }
          },
          "404":  {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "description": "",
                  "$ref": "#/components/schemas/RouteNotFoundResponseSchema"
                }
              }
            }
          },
          "500": {
            "description": "",
            "content": {
              "application/json": {
                  "schema": {
                    "description": "",
                    "$ref": "#/components/schemas/ErrorResponseSchema"
                  }
              }
            }
          }
        }
      }
    },

    "/users/verify-otp": {
      "put": {
        "tags": ["User"],
        "summary": "Verify otp for register/login",
        "description": "Endpoint to verify the OTP sent to user phone",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "otp": { "type": "integer", "example": 123456 }
                },
                "required": ["otp"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "data": {
                      "type": "object",
                      "properties": {
                        "message": { "type": "string", "example": "User verified for provided otp" },
                        "accessToken": { "type": "string",
                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VyIjp7Il9pZCI6IjY2Njk2OGMzYmI2N2E3MWE5YjI3ZmU1NyIsInJvbGUiOnsiX2lkIjoiNjY2YWQ1NjgwOTk0YjRjZDg5OTg4MGViIiwibmFtZSI6IlNVUEVSX0FETUlOIn19LCJpYXQiOjE3MTg3MDcxMzR9.6iSmTmrGtun6D-N8iYLq5kLdtDdpShfEVAKEZKVaV78" },
                        "user": { "$ref": "#/components/schemas/UserResponseSchema" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "description": "",
                  "$ref": "#/components/schemas/BadRequestSchema"
                }
              }
            }
          },
          "404":  {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "description": "",
                  "$ref": "#/components/schemas/RouteNotFoundResponseSchema"
                }
              }
            }
          },
          "500": {
            "description": "",
            "content": {
              "application/json": {
                  "schema": {
                    "description": "",
                    "$ref": "#/components/schemas/ErrorResponseSchema"
                  }
              }
            }
          }
        }
      }
    },

    "/users/update-name": {
      "put": {
        "tags": ["User"],
        "summary": "Update name of user",
        "description": "Endpoint to update a user's name",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" }
                },
                "required": ["name"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Name updated successfully"
                    },
                    "data": {
                        "description": "",
                        "$ref": "#/components/schemas/UserResponseSchema"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "description": "",
                  "$ref": "#/components/schemas/AuthenticationErrorResponseSchema"
                }
              }
            }
          },
          "400": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "description": "",
                  "$ref": "#/components/schemas/BadRequestSchema"
                }
              }
            }
          },
          "404":  {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "description": "",
                  "$ref": "#/components/schemas/RouteNotFoundResponseSchema"
                }
              }
            }
          },
          "500": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                    "description": "",
                    "$ref": "#/components/schemas/ErrorResponseSchema"
                }
              }
            }
          }
        }
      }
    }
  }
}